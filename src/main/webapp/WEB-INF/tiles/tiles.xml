<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="layout-tiles" template="/WEB-INF/tiles/templetes/default-layout.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/fragments/header.jsp"/>
        <put-attribute name="body" value=""/>
        <put-attribute name="footer" value="/WEB-INF/tiles/fragments/footer.jsp"/>
    </definition>

    <definition name="*" extends="layout-tiles">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
    </definition>
    <definition name="*/*" extends="layout-tiles">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    </definition>
</tiles-definitions>